<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<% if user == current_user %>
  <%= link_to "プロフィール", edit_user_path(user) %>
<% else %>
  <%= link_to "プロフィール", user_path(current_user) %>
<% end %>
<h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label for="book_body">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div><%= f.submit "Create Book" %></div>
  <% end %>
