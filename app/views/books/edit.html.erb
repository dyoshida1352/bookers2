<main>
  <div>
    <div>
      <div>
        <h1>Editing Book</h1>
        <%= form_with model: @book, local:true do |f| %>
          <div>
            <label>Title</label>
            <%= f.text_field :title %>
          </div>
          <div>
            <label>Opinion</label>
            <%= f.text_area :body %>
          </div>
          <div><%= f.submit 'Update Book' %></div>
        <% end %>
        <%= link_to "show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>