<div>
  <div>
    <div>
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <%= render 'books/error_messages', miss:@user %>
        <div>
          <label>Name</label>
          <%= f.text_field :name %>
        </div>
        <div>
          <label>Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div>
          <label>Introduction</label>
          <%= f.text_field :introduction %>
        </div>
        <div><%= f.submit 'Update User' %></div>
      <% end %>
    </div>
  </div>
</div>